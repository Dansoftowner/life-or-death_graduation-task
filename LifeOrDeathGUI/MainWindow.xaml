<Window x:Class="LifeOrDeathGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifeOrDeathGUI"
        mc:Ignorable="d"
        Title="Életjáték álláskészítő" Height="450" Width="800">
    <Canvas Name="MainCanvas">
        <Label Content="Mátrix mérete [sor x oszlop]:" Canvas.Left="10" Canvas.Top="10"></Label>
        <ComboBox Name="RowCombo" Canvas.Left="180" Canvas.Top="15" Width="50"></ComboBox>
        <ComboBox Name="ColumnCombo" Canvas.Left="240" Canvas.Top="15" Width="50"></ComboBox>
        <Button Name="NewMatrixButton" Content="Új mátrix létrehozása" Canvas.Left="17" Canvas.Top="50" Width="160" Click="NewMatrix_Click"></Button>
        <Button Name="SaveButton" Content="Állás mentése" Canvas.Left="190" Canvas.Top="50" Width="120" Click="Save_Click"></Button>
        <Grid Name="CheckBoxGrid" Height="Auto" Width="Auto" Canvas.Left="17" Canvas.Top="89"/>
    </Canvas>
</Window>
